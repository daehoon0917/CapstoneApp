<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context=".appsettings.notification.DefaultNotificaitonSettingsFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/notification_basic_setting"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <Switch

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/notification_sound_switch"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/notification_sound_selection"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Switch

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/notification_vibration_switch"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Switch

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/notification_screen_switch"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- TODO: Update blank fragment layout -->

</layout>